<div class="main-panel">
  <div class="content-wrapper">
    <div class="card col-12">
      <div class="card-body">
        <div class="titleSec">
          <button type="button" class="btn btn-primary" id="myBtn">Add</button>
          <h2>Agent Details</h2>
        </div>
        <!-- <input type="file" name="myFile" class="" id="pctxFile"> -->
        <table id="example2" class="table table-striped table-bordered" style="width:100%">
          <thead>
            <tr>
              <th>Sl. No.</th>
              <th>Agent Code</th>
              <th>Agent Name</th>
              <th>Mobile</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% data.msg.forEach(function(item,index) { %>

            <tr>
              <td><%=(index+1)%></td>
              <td><%=item.user_id%></td>
              <td><%=item.agent_name%></td>
              <td><%=item.phone_no%></td>
              <td><h5><span class="badge badge-<%=(item.active_flag=='Y')?"success":"danger"%>"><%=(item.active_flag=='Y')?"Active":"Deactive"%></span></h5> </td>
              <!-- <td>
                <div class="custom-control custom-switch">
                  <input
                    type="checkbox"
                    class="custom-control-input"
                    id="customSwitch1"
                    <%=(item.active_flag=='Y')?"checked":""%>
                  />
                  <label class="custom-control-label" for="customSwitch1"
                    ></label
                  >
                </div>
              </td> -->

              <td>
                <a href="/admin/edit_agent/<%=item.id%>" class="btn btn-info"
                  >Edit</a
                >
              </td>
            </tr>

            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- The Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Create Agent</h4>
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
      </div>
<!-- <p><%= user.user_data.msg[0].sec_amt_type %></p> -->
      <!-- Modal body -->
      <div class="modal-body">
        <form action="/admin/add_agent" method="post" id="myForm">
          <div class="row">


            <!-- <div class="form-group col-6">
              <label for="agent_c">Agent Code:</label>
              <input
                type="text"
                id="agent_c"
                name="user_id"
                class="form-control"
                value=""
                required
              />
            </div> -->

            <div class="form-group col-6">
              <div class="row">
                <div class="col">
                  <label for="agent_c">Agent Code:</label>
                  <input
                    type="text"
                    id="agent_c"
                    name="user_id"
                    class="form-control"
                    value=""
                    required
                  />
                </div>
                <div class="col-auto mt-4" id="sp_inagentc" >
                  <div class="spinner-border text-success"></div>
                </div>
              </div>
            </div>














            

            <div class="form-group col-6">
              <label for="name">Name:</label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                placeholder="Enter Name"
                required
              />
            </div>

            <div class="form-group col-6">
              <label for="email">Email:</label>
              <input
                type="email"
                name="email"
                class="form-control"
                id="email"
                required
              />
            </div>
            <div class="form-group col-6">
              <label for="mobile">Mobile No.:</label>
              <input
                type="text"
                name="mobile"
                class="form-control"
                id="mobile"
                required
              />
            </div>

            <% if(user.user_data.msg[0].sec_amt_type=='A'){ %>

          

              <div class="form-group col-6">
                <div class="row">
                  <div class="col">
                    <label for="agent_account_no">Savings Account No :</label>
                    <input
                      type="text"
                      name="agent_account_no"
                      class="form-control"
                      id="agent_account_no"
                      required
                    />
                  </div>
                  <div class="col-auto mt-4" id="spinerbtn">
                    <div class="spinner-border text-success"></div>
                  </div>
                </div>
              </div>
            <% } %>


            <div class="form-group col-6">
              <label for="max_amt">Max Allowable Collection Amount :</label>
              <input
                type="number"
                name="max_amt"
                class="form-control"
                id="max_amt"
                required
                <%= (user.user_data.msg[0].sec_amt_type=='A')?'readonly':'' %>
              />
            </div>

            <div class="form-group col-6">
              <label for="allow_collection_days">Max allowable no.of days :</label>
              <input
                type="number"
                name="allow_collection_days"
                class="form-control"
                id="allow_collection_days"
                required
              />
            </div>

            <div class="form-group col-6">
              <label for="pin">PIN:</label>
              <input
                type="password"
                name="password"
                class="form-control"
                id="pin"
                maxlength="4"
                required
              />
            </div>

            <div class="form-group col-6">
              <label for="cid">Confirm PIN:</label>
              <input
                type="password"
                name="confirmPassword"
                class="form-control"
                id="cid"
                maxlength="4"
                required
              />
            </div>
            <!-- <div class="form-group col-6">
              <label for="agent">Serial NO. :</label>
              <input
                type="text"
                name="device_sl_no"
                class="form-control"
                value=""
              />
            </div> -->
            <div class="form-group col-6">
              <label for="deviceId">Device Id. :</label>
              <input
                type="text"
                name="device_id"
                class="form-control"
                id="deviceId"
                required
              />
            </div>

            <!-- <div class="form-group col-6">
                <label for="agent">Profile Pic. :</label>
                <input
                  type="file"
                  name="profile_pic"
                  class="form-control"
                  value=""
                />
              </div> -->

            <!-- <div class="form-group col-8">
              <label for="agent">Address :</label>
              <textarea name="adress" class="form-control" id=""></textarea>
            </div> -->

            <div class="form-group col-12">
              <input
                type="submit"
                value="SUBMIT"
                class="btn btn-primary btn-block"
              />
            </div>
          </div>
        </form>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  $("#spinerbtn").hide();
  $("#sp_inagentc").hide();
  $(document).ready(function () {
    $("#myBtn").click(function () {
      $("#myModal").modal();
    });
  });

$("#agent_account_no").change(function(){ 
  var agent_account_no = $(this).val();
  $("#spinerbtn").show();
  $.ajax({
    type: "POST",
    url: "/admin/fetch_agent_max_all_col",
    data: {agent_account_no: agent_account_no },
    success: function (response) {
      $("#spinerbtn").show();
      if(response?.msg[0]?.CLR_BAL){
      $("#max_amt").val(response.msg[0].CLR_BAL);
     
    }else{

      alert("Invalid Account No.!!");
      
    }
    $("#spinerbtn").hide();
    },
    error: function (error) {
      console.log(error);
    },
  });
});

<% if(user.user_data.msg[0].sec_amt_type=='A'){ %>


$("#agent_c").change(function(){ 
  var agent_c = $(this).val();
  $("#sp_inagentc").show();
  $.ajax({
    type: "POST",
    url: "/admin/fetch_agent_name",
    data: {agent_c: agent_c },
    success: function (response) {
      $("#sp_inagentc").show();
      if(response?.msg[0]?.AGENT_NAME){
      $("#name").val(response.msg[0].AGENT_NAME);
     
    }else{

      alert("Invalid Agent Code!!");
      
    }
    $("#sp_inagentc").hide();
    },
    error: function (error) {
      $("#sp_inagentc").hide();
      console.log(error);
    },
  });
});

<% } %>

</script>
