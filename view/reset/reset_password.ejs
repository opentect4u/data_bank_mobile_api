<div class="main-panel">
    <div class="content-wrapper">
      <div class="card col-12">
        <div class="card-body">
          <div class="titleSec">
            <h2>Reset Password</h2>
          </div>
          <div class="row">
            <div class="form-group col-4">
              <label for="user_type"><b>User Type:</b></label>
              <select name="user_type"
              class="form-control"
              id="user_type"
              required>
                <option value="">Select User Type</option>
                <option value="B" id="bank_op">Bank</option>
                <option value="R" id="branch_op">Branch</option>
              </select>
              </select>
            </div>
            <div class="form-group col-4" id="bank_div">
                <label for="bank"><b>Bank Name:</b></label>
                <select name="bank"
                class="form-control"
                id="bank"
                required>
                  <option value="">Select Bank Name</option>
                  <% data.msg.forEach(function(item2,index) { %>
                  <option value="<%=item2.bank_id%>"><%=item2.bank_name%></option>
                  <% }); %>
                  
                </select>
              </div>

              <div class="form-group col-4" id="br_div">
                <label for="branch"><b>Branch Name:</b></label>
                <select name="branch"
                class="form-control"
                id="branch"
                required>
                  <option value="">Select Branch Name</option>
                  
                </select>
              </div>  
            </div>
        </div>
      </div>
    </div>
  </div>
  <script>
   $(document).ready(function(){
    $('#bank_div').hide()
    $('#br_div').hide()
   })

   $('#user_type').on('change', function(){
    $('#bank_div').show()
   })

   $('#bank').on('change', function(){
    var bankId=$(this).val();

    $.ajax({
          type: "POST",
          url: "/super-admin/reset_branch_name",
          data: { bank_id: bankId },
          success: function(response) {
            console.log(response.data.msg)
           $('#branch').empty();
           $('#branch').append(`<option value="">Select Branch Name</option>`)
           
            response.data.msg.forEach(function(resData) {
              console.log(resData,"123456");
                $('#branch').append('<option value="' + resData.branch_code + '">' + resData.branch_name + '</option>');
            });
            if($('#user_type').val() != 'B')
            console.log($('#user_type').val());
            $('#br_div').show()
           
          },
        error: function (error) {
          console.log(error);
        //   tbody.empty();
         $("#br_div").hide()
        },
      }); 
   })
    
  </script>